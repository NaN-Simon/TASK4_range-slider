mixin screenboard(properties = {})

  -
    const {
      id = 0,
      className = 'zero',
    } = properties

  .screenboard&attributes({
    class: ['screenboard-js',`screenboard-${className}`]
  })
    .screenboard__wrapper

      .screenboard__unit
        .screenboard__title Orientation
          .screenboard__options
            label.screenboard__label
              input.screenboard__radio(
              type="radio",
              name=`orientation${id}`,
              checked)
              span.screenboard__text Horizontal
            label.screenboard__label
              input.screenboard__radio(
              type="radio",
              name=`orientation${id}`)
              span.screenboard__text Vertical

      .screenboard__unit
        .screenboard__title Number of sliders
          .screenboard__options
            label.screenboard__label
              input.screenboard__radio(
              type="radio",
              name=`range${id}`,
              checked)
              span.screenboard__text One
            label.screenboard__label
              input.screenboard__radio(
              type="radio",
              name=`range${id}`)
              span.screenboard__text Two

      .screenboard__unit
        .screenboard__title Display sup-numbers
          .screenboard__options
            label.screenboard__label
              input.screenboard__radio(
              type="radio",
              name=`sup-numbers${id}`,
              checked)
              span.screenboard__text No
            label.screenboard__label
              input.screenboard__radio(
              type="radio",
              name=`sup-numbers${id}`)
              span.screenboard__text Yes

      .screenboard__unit
        .screenboard__title Values
          input(type="text", name="valueFrom" placeholder='valueFrom')
          input(type="text", name="valueTo" placeholder='valueTo')

