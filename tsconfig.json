{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "lib": ["es2016", "dom"],
    "outDir": "./dist/",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["./dist"]
}